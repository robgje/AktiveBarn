                                <MudIconButton Class="pa-1" Icon="@Icons.Material.Filled.Favorite" Color="Color.Secondary" />
                                <MudIconButton Class="pa-1" Icon="@Icons.Material.Filled.Share" Color="Color.Info" />
                            </MudCardActions>
                            <MudDivider Class="justify-start mt-1 mb-1" Vertical="true" FlexItem="true" />
                            <MudPaper Class="ma-1 d-flex flex-row-reverse" Elevation="0" Width="100%">
                                <MudStack Spacing="0" Wrap="Wrap.WrapReverse" AlignItems="AlignItems.Start" Style="height: 40px;">
                                    <MudIcon Icon="@Icons.Custom.Uncategorized.FoodApple" Color="Color.Success" Size="Size.Small"/>
                                    <MudIcon Icon="@Icons.Material.Rounded.LocalCafe" Color="Color.Info" Size="Size.Small"/>
                                    <MudIcon Icon="@Icons.Material.Rounded.BeachAccess" Color="Color.Warning" Size="Size.Small"/>
