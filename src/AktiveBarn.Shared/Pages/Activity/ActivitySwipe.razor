                                    <MudIcon Icon="@bonfireImgToSvg" Color="Color.Warning" Size="Size.Small"/>
                                    <MudIcon Icon="@strollerSvg" Color="Color.Warning" Size="Size.Small"/>
                                </MudStack>
                            </MudPaper>
                        </MudPaper>
                    </MudCard>
                </MudPaper>
            }
        </MudPaper>
    </MudItem>
</MudGrid>

