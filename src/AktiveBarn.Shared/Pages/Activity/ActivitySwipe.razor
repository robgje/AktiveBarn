@using AktiveBarn.Shared.Pages.Common
<MudGrid Class="pt-0 mb-1" Spacing="1">
    <MudItem xs="12" md="8">
        <MudPaper Class="title-paper" Elevation="0">
            <MudText Typo="Typo.h6">@(title)</MudText> @* TODO: Fix text color *@
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Class="d-flex gap-6 hz-container paper-card justify-md-start" Elevation="0">
            @for (int i = 0; i < 5; i++)
            {    
                <MudPaper Class="flex-none rounded-lg" Width="170px" Elevation="0">
                    <MudCard Elevation="6" Outlined="true">
                        <MudCardMedia Image="images/door.jpg" Height="140" />
