        background-color: #F2F2F2;
        padding-top: 0px;
        padding-bottom: 8px;
        margin-bottom: 50px;
        min-height: 100vh; /* Ensure the content area takes at least the full height of the viewport */
    }

    .main-color {
        color: #F2F2F2;
    }

    .main-color-background {
        background-color: #F2F2F2;
    }

