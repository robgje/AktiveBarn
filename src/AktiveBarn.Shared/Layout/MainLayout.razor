@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider DefaultScrollbar="true"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Bottom="true" Class="rounded-t-xl main-color-background" Elevation="4">
        <MudPaper Class="d-flex justify-space-around main-color-background" Width="100%" Elevation="0">
            @* <MudStack Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Row="true" StretchItems="StretchItems.Middle"> *@
                <MudIconButton Ripple="true" Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" OnClick="@((e) => DrawerToggle())" />
                <MudIconButton Ripple="true" Icon="@Icons.Material.Filled.CalendarMonth" Color="Color.Dark" />
                <MudIconButton Ripple="true" Icon="@Icons.Material.Filled.Favorite" Color="Color.Dark" />
                <MudIconButton Ripple="true" Icon="@Icons.Material.Rounded.AccountCircle" Color="Color.Dark" />
            @* </MudStack> *@
        </MudPaper>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" Class="pt-8">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="main-content pb-2">
        @Body
    </MudMainContent>
    @* <MudAppBar Elevation="1" Class="footer-bottom">
        This is footer
    </MudAppBar> *@
</MudLayout>

@code {
    bool _drawerOpen = true;
    MudColor _color = Colors.Blue.Lighten1;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

