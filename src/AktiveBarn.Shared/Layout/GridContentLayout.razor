<MudGrid Justify="Justify.Center" Class="mb-6 d-flex">
   @if (TopFragment != null)
   {
      <MudItem xs="12">
         @TopFragment
      </MudItem>
   }

   @if (ContentFragment != null)
   {
      @ContentFragment
   }
</MudGrid>

@code {
   [Parameter] public RenderFragment? TopFragment { get; set; }
   [Parameter] public RenderFragment? ContentFragment { get; set; }
}

